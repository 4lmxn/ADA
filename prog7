#include <stdio.h>

int n = 5;
int w[10] = {3, 3, 2, 5, 1};
int p[10] = {10, 15, 10, 12, 8};
int W = 10;

int main() {
    int cur_w = W;
    float tot_v = 0.0;
    int i, maxi, used[10] = {0};

    while (cur_w > 0) {
        maxi = -1;

        for (i = 0; i < n; ++i) {
            if (used[i] == 0 && (maxi == -1 || (float)p[i]/w[i] > (float)p[maxi]/w[maxi]))
                maxi = i;
        }

        used[maxi] = 1;
        cur_w -= w[maxi];

        if (cur_w >= 0) {
            printf("Added object %d (%d, %d) completely. Space left: %d\n", maxi + 1, p[maxi], w[maxi], cur_w);
            tot_v += p[maxi];
        } else {
            float fraction = 1 + (float)cur_w / w[maxi];
            printf("Added %d%% of object %d (%d, %d).\n", (int)(fraction * 100), maxi + 1, p[maxi], w[maxi]);
            tot_v += fraction * p[maxi];
        }
    }

    printf("Total value: %.2f\n", tot_v);
    return 0;
}
