#include <stdio.h>
#include <stdlib.h>
#include <time.h>

/*
plot "D:/KSIT/IV_Sem/ADA_24-25/Lab ProgramS/plot.data" u 1:2 w lp title "Bubble Sort", 
     "D:/KSIT/IV_Sem/ADA_24-25/Lab ProgramS/plot.data" u 1:3 w lp title "Selection Sort"
*/

void bubbleSort(int a[], int n) {
    int i, j, temp;
    for (i = 0; i < n; i++) {
        for (j = 0; j < n - 1; j++) {
            if (a[j] > a[j + 1]) {
                temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }
}

void selectionSort(int a[], int n) {
    int i, j, temp;
    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            if (a[i] > a[j]) {
                temp = a[i];
                a[i] = a[j];
                a[j] = temp;
            }
        }
    }
}

int main() {
    int a[100000], b[100000];
    int i, n = 3000;
    int number[30];
    double bubble_time[30], selection_time[30];
    clock_t start, end;

    srand(200);

    for (int count = 0; count < 30; count++) {
        for (i = 0; i < n; i++) {
            a[i] = rand() % 10000;
            b[i] = rand() % 10000;
        }

        number[count] = n;

        start = clock();
        bubbleSort(a, n);
        end = clock();
        bubble_time[count] = (double)(end - start) / CLOCKS_PER_SEC;

        start = clock();
        selectionSort(b, n);
        end = clock();
        selection_time[count] = (double)(end - start) / CLOCKS_PER_SEC;

        printf("%d \t %f \t %f\n", number[count], bubble_time[count], selection_time[count]);

        n += 3000;
    }

    // Final Output
    printf("-----------------------------------------------------\n");
    printf("Number\tBubble Time\tSelection Time\n");
    for (i = 0; i < 30; i++) {
        printf("%d\t%f\t%f\n", number[i], bubble_time[i], selection_time[i]);
    }

    return 0;
}
